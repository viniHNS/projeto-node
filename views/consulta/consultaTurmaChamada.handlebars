<div class="container mt-5 justify-content-center d-flex">
  <table class="table table-striped table-hover table-bordered shadow">
    <thead>
      <tr class="table-dark text-center align-middle">
        <th class="col-md-2" scope="col">Nome</th>
        <th class="col-md-2" scope="col">Periodo</th>
        <th class="col-md-1" scope="col">Qtd de alunos</th>
        <th class="col-md-1" scope="col">Opções</th>
      </tr>
    </thead>

    <tbody class="table-group-divider text-center">
      {{#if turmas}}
        {{#each turmas}}
        <tr>
          <td>{{nome}}</td>
          <td class="text-center">{{periodo}}</td>
          <td class="text-center">{{quantidadeAlunos}}</td>
          <td style="display: flex; gap: 1.5rem;" class="justify-content-center">
            <a href="/listaTurmaChamada/{{_id}}" data-bs-toggle="popover" data-bs-content="Consultar Registro" data-bs-trigger="hover" data-bs-placement="top"><i class="fa-solid fa-magnifying-glass" style="color: green;"></i></a>
            <a href="#" data-bs-toggle="popover" data-bs-content="Editar Registro" data-bs-trigger="hover" data-bs-placement="top"><i class="fa-solid fa-pen"></i></a>
          </td>
        </tr>
        {{/each}}
      {{else}}
        <tr>
          <td colspan="4">Nenhuma turma encontrada <i class="fas fa-face-frown" style="color: rgb(85, 85, 85);"></i></td>
        </tr>
      {{/if}}
    </tbody>
  </table>
</div>