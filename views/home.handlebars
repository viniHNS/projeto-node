<div class="container">
    <div class="row mt-5">
        <div class="col-md-12">
            
            <h1 class="text-center"><span id="element"></span></h1>
        </div>
    </div>

    <div class="row mt-5 mb-5">
        <div class="col-md-6">
            <canvas class="mx-auto" id="myChart" width="300" height="300"></canvas>
        </div>
        <div class="col-md-6">
            <canvas class="mx-auto" id="myChart2" width="300" height="300"></canvas>
        </div>
    </div>
</div>

<script src="https://unpkg.com/typed.js@2.0.16/dist/typed.umd.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>

    {{#if isAniversario}}
        const defaults = {
        spread: 360,
        ticks: 50,
        gravity: 0,
        decay: 0.94,
        startVelocity: 30,
        shapes: ["star"],
        colors: ["FFE400", "FFBD00", "E89400", "FFCA6C", "FDFFB8"],
        };

        function shoot() {
        confetti({
            ...defaults,
            particleCount: 40,
            scalar: 1.2,
            shapes: ["star"],
        });

        confetti({
            ...defaults,
            particleCount: 10,
            scalar: 0.75,
            shapes: ["circle"],
        });
        }

        setTimeout(shoot, 0);
        setTimeout(shoot, 100);
        setTimeout(shoot, 200);

        let typed = new Typed('#element', {
            strings: ['Parabéns {{nome}}! 🎉', 'Hoje é seu aniversário! 🎂 🍰', 'Desejamos muitas felicidades e sucesso! 🥳'],
            typeSpeed: 50,
            backSpeed: 250,
            fadeOut: true,
            loop: false
        });
    {{else}}
    let typed = new Typed('#element', {
      strings: ['Bem vindo ao sistema de cadastro de alunos!', 'Vamos Começar?', '{{nome}}, logado com sucesso!'],
      typeSpeed: 50,
      backSpeed: 25,
      fadeOut: true,
      loop: false
    });
    {{/if}}

    const ctx = document.getElementById('myChart');
    let dados = Array({{#each allAlunos}}
        "{{periodoEstudo}}", 
    {{/each}})


{{#ifCond tipoUsuario '==' 'administrador' }}
    let somentePeriodoManha = dados.filter((item) => {
        return item == 'Manhã'
    })

    let somentePeriodoTarde = dados.filter((item) => {
        return item == 'Tarde'
    })

    let somentePeriodoNoite = dados.filter((item) => {
        return item == 'Noite'
    })

    
    new Chart(ctx, {
        type: 'bar',
        data: {
        labels: ['Manhã', 'Tarde', 'Noite'],
        datasets: [{
            label: 'Número de alunos',
            data: [somentePeriodoManha.length, somentePeriodoTarde.length, somentePeriodoNoite.length],
            borderWidth: 1,
            backgroundColor: [
                'rgba(255, 99, 132, 0.5)',
                'rgba(54, 162, 235, 0.5)', 
                'rgba(255, 206, 86, 0.5)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)', 
                'rgba(255, 206, 86, 1)'
            ],
        }]
        },
        options: {
            scales: {
                y: {
                beginAtZero: true
                }
            },

            plugins: {
                title: {
                display: true,
                text: 'Número de alunos por período'
                }
            },

            animation: {
                duration: 2000,
                easing: 'easeInOutBounce'
            }
        }
    });

    const ctx2 = document.getElementById('myChart2');
    let dados2 = Array({{#each allAlunos}}
        "{{sexo}}", 
    {{/each}})

    let somenteSexoMasculino = dados2.filter((item) => {
        return item == 'Masculino'
    })

    let somenteSexoFeminino = dados2.filter((item) => {
        return item == 'Feminino'
    })

    new Chart(ctx2, {
        type: 'pie',
        data: {
        labels: ['Masculino', 'Feminino'],
        datasets: [{
            label: 'Número de alunos',
            data: [somenteSexoMasculino.length, somenteSexoFeminino.length],
            borderWidth: 1,
            backgroundColor: [
                'rgba(54, 162, 235, 0.5)', 
                'rgba(255, 99, 132, 0.5)',
            ],
            borderColor: [
                'rgba(54, 162, 235, 1)', 
                'rgba(255, 99, 132, 1)',
            ],
        }]
        },
        options: {
            scales: {
                y: {
                beginAtZero: true
                }
            },

            plugins: {
                title: {
                display: true,
                text: 'Número de alunos por sexo'
                }
            }
        }
    });
{{/ifCond}}
</script>
