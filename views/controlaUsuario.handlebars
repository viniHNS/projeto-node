<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center mt-5">Controle de usu√°rios</h1>
            <hr>
            {{#each usuarios}}
            <div class="card mt-5">
                <div class="card-header">
                    <h3>{{nome}}</h3>
                </div>
                <div class="card-body">
                    <p><strong>Nome:</strong> {{nome}}</p>
                    <p><strong>Email:</strong> {{email}}</p>
                    <p><strong>Tipo Usuario:</strong> {{tipoUsuario}}</p>
                    <p><strong>Ativo: </strong>{{ativo}}</p>
                </div>
                <div class="card-footer">
                    <a href="/editarUsuario/{{this._id}}" class="btn btn-primary">Alterar Dados</a>
                    <form class="form-consulta" action="/deletarUsuario/{{this._id}}" method="post">
                        <input type="hidden" name="_method" value="delete">
                        <button id="btn-deletar" type="submit" class="btn btn-danger">Deletar</button>
                    </form>
                </div>
            {{/each}}
            </div>
        </div>
    </div>
</div>
<script src="public/js/scriptAdmin.js"></script>


